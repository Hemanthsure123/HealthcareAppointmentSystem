{
  "Routes": [
    // --- UserService Routes ---
    {
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5251
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/roles/{everything}",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/roles/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5251
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/users/test",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/users/test",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5251
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    // --- AppointmentService Routes ---
    {
      "UpstreamPathTemplate": "/api/appointments",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "DownstreamPathTemplate": "/api/appointments",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5174
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UpstreamPathTemplate": "/api/appointments/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/appointments/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5174
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5224"
  }
}