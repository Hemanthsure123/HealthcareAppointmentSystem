@model Shared.Models.AppointmentDTO

@{
    ViewData["Title"] = "Book Appointment";
}

<h1>Book Appointment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group mb-2">
                <label class="control-label">Date</label>
                <input asp-for="Date" class="form-control" />
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVirtual" /> Is this a virtual appointment?
                </label>
            </div>

            <input type="hidden" asp-for="PatientId" value="00000000-0000-0000-0000-000000000001" />
            <input type="hidden" asp-for="DoctorId" value="00000000-0000-0000-0000-000000000002" />

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>